---
import Header from "../components/Header.astro";
import "../styles/global.css";

const { frontmatter } = Astro.props;
---

<!doctype html>
<Header pageTitle={frontmatter.title} />
<div class="max-w-screen-md mx-auto min-h-screen">
    <div class="pt-32 mb-20">
        <div class="flex justify-between mb-1">
            <h1 class="text-xl font-bold font-sans">{frontmatter.title}</h1>
            <div class="text-right text-gray-400 font-serif">
                <p>{frontmatter.pubDate.toString().slice(0, 10)}</p>
                <a href={`/category/${frontmatter.category}`}>{frontmatter.category}</a>
            </div>
        </div>
    </div>
    <style>
        article :global(h1) {
            @apply font-sans text-lg mb-8 font-bold;
        }

        article :global(h2) {
            @apply font-sans text-lg mb-8 font-bold;
        }

        article :global(h3) {
            @apply font-sans mb-8 font-bold;
        }

        article :global(li) {
            @apply font-serif list-disc
        }
        article :global(p) {
            @apply font-serif mb-10;
        }

        article :global(code) {
            @apply font-code bg-gray-100; 
        }

        :global(.expressive-code) {
            @apply mb-20;
        }
    </style>
    <article>
        <slot />
        <script src="https://giscus.app/client.js"
        data-repo="KangBK0120/KangBK0120.github.io"
        data-repo-id="MDEwOlJlcG9zaXRvcnk5ODQzNjAxNw=="
        data-category="Announcements"
        data-category-id="DIC_kwDOBd4Dsc4Cp0ci"
        data-mapping="pathname"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="top"
        data-theme="noborder_light"
        data-lang="ko"
        crossorigin="anonymous"
        async>
        </script>
    </article>
    
</div>
